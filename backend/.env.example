CLOUDINARY_URL=cloudinary://<api_key>:<api_secret>@<cloud_name>

# Alternatively, specify individually (if not using CLOUDINARY_URL):
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# Optional folder overrides
# CLOUDINARY_AVATAR_FOLDER=funly/avatars
# CLOUDINARY_CHAT_FOLDER=funly/chat
# CLOUDINARY_DATING_FOLDER=funly/dating

# CORS origin for frontend (Vite default):
CORS_ORIGIN=http://localhost:5173
# Redis Cloud (choose either REDIS_URL or host/port/username/password)
# REDIS_URL=redis://default:yourpassword@your-host:your-port

REDIS_HOST=your-redis-host
REDIS_PORT=your-redis-port
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password

# Server
PORT=8080
CORS_ORIGIN=http://localhost:5173
